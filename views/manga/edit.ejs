<%- include('../partials/header.ejs') %>

<main class="container my-5">
    <h1 class="text-center fw-bold">Edit Manga</h1>
    <div class="border p-4 rounded-3 shadow-sm" style="max-width: 600px; margin: 0 auto;">
        <form method="POST" action="/mangas/<%= manga.id %>?_method=PUT" enctype="multipart/form-data" class="mt-4">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= manga.title %>" required>
            </div>
            <div class="mb-3">
                <label for="seller" class="form-label">Seller</label>
                <input type="text" id="seller" name="seller" class="form-control" value="<%= manga.seller %>" required>
            </div>
            <div class="mb-3">
                <label for="condition" class="form-label">Condition</label>
                <select id="condition" name="condition" class="form-select" required>
                    <option value="New" <% if (manga.condition === 'New') { %>selected<% } %>>New</option>
                    <option value="Like New" <% if (manga.condition === 'Like New') { %>selected<% } %>>Like New</option>
                    <option value="Very Good" <% if (manga.condition === 'Very Good') { %>selected<% } %>>Very Good</option>
                    <option value="Good" <% if (manga.condition === 'Good') { %>selected<% } %>>Good</option>
                    <option value="Acceptable" <% if (manga.condition === 'Acceptable') { %>selected<% } %>>Acceptable</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price ($)</label>
                <input type="number" id="price" name="price" class="form-control" value="<%= manga.price %>" required min="1" step="0.01">
            </div>
            <div class="mb-3">
                <label for="details" class="form-label">Details</label>
                <textarea id="details" name="details" class="form-control" rows="4" required minlength="10"><%= manga.details %></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image:</label>
                <input type="file" id="image" name="image" accept="image/*" class="form-control">
            </div>
            <button type="submit" class="btn btn-dark w-100">Update Manga</button>
        </form>
    </div>
</main>

<%- include('../partials/footer.ejs') %>
